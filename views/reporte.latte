{layout '../layouts/default.latte'}

{block header}
	<p class="title">Reporte a comentario</p>
{/block}

{block content}
  <p>Se va a reportar el siguiente comentario:</p>
  {include '../components/review.latte', id: $review->id, username: $review->username, message: $review->message, note: $review->note, votes: $review->votes}
  <form action="{path('/reports/new/' . $review->id)}" method="POST">
    <div class="field">
      <label class="label">Raz√≥n</label>
      <div class="control">
        <textarea name="reason" class="textarea"></textarea>
      </div>
    </div>
    <div class="field has-addons">
      <div class="control">
        <figure class="figure">
          <img src="{path('/captcha')}" />
        </figure>
      </div>
      <div class="control">
        <input name="captcha" type="text" class="input" placeholder="Escribe el Captcha" />
      </div>
    </div>
    <div class="field">
      <div class="control">
        <button type="submit" class="button is-success">Enviar</button>
      </div>
    </div>
  </form>
{/block}
